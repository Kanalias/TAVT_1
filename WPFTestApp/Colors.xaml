			VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
			Height="20"
            Width="75"
            Grid.Row="4"
            Grid.Column="0"
		    x:Name="CancelBtn"
            Click="CancelBtn_Click"
            Content="Cancel"/>
