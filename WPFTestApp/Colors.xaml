            Grid.Column="1"
            Grid.Row="1"
            Width="80"
            Height="20" Margin="5,25,65,5"
                  Tag="3"
            DropDownOpened="SomeContextMenuOpening"
            SelectionChanged="ChangeCountry"/>

        <Image x:Name="P5" 
            Grid.Column="0"
            Grid.Row="2"
            Width="50" 
