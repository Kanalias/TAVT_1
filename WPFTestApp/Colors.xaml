                HorizontalContentAlignment="Center" 
                Height="20" Width="75" 
                Content="OK" 
                x:Name="OKBtn" 
                Click="OKBtn_Click" 
                Grid.Column="1" 
                Grid.Row="4"/>
        <Button Name="RandomBtn"
                Click="RandomBtn_Click"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                Content="Random Colors"
                />


