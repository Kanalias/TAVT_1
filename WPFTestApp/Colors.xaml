<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="WPFTestApp.Colors" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Цвета"
	Height="330"
	Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Name="P1" 
               Grid.Column="0"
               Grid.Row="0"
               Width="50" 
               Height="25" Margin="10,12.5,90,12.5"/>
        <Label Content="Страна 1"
               Grid.Column="0"
               Grid.Row="0"
               FontSize="11"
               Width="80"
               Height="25" Margin="65,5,5,20" HorizontalContentAlignment="Center"/>
        <ComboBox Name="ComboP1"
                  Grid.Column="0"
                  Grid.Row="0"
                  Width="80"
                  Height="20" Margin="65,25,5,5"
                  Tag="0"
                  DropDownOpened="SomeContextMenuOpening"
                  SelectionChanged="ChangeCountry"
                  />

        <Image x:Name="P2" 
            Grid.Column="1"
            Grid.Row="0"
            Width="50" 
            Height="25" Margin="90,12,10,12"/>
        <Label Content="Страна 2"
            Grid.Column="1"
            Grid.Row="0"
            FontSize="11"
            Width="80"
            Height="25" Margin="5,5,65,20" HorizontalContentAlignment="Center"/>
