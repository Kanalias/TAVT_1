            Grid.Column="1"
            Grid.Row="0"
            Width="80"
            Height="20" 
            Margin="5,25,65,5"
                  Tag="1"
                  DropDownOpened="SomeContextMenuOpening"
                  SelectionChanged="ChangeCountry"/>

        <Image x:Name="P3" 
            Grid.Column="0"
            Grid.Row="1"
            Width="50" 
            Height="25" Margin="10,12.5,90,12.5"/>
