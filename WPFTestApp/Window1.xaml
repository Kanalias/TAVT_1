<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="WPFTestApp.Window1"
	Title="Лучники"
	Height="600"
	Width="800"
	ResizeMode="CanMinimize"
	x:Name="window1"
	Loaded="window1_Loaded">
    <Grid
		ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition
				Height="20" />
            <RowDefinition
				Height="330" />
            <RowDefinition
				Height="200*" />
            <RowDefinition
				Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="200*" />
            <ColumnDefinition
				Width="330" />
            <ColumnDefinition
				Width="75" />
            <ColumnDefinition
				Width="75" />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="MyStack" Grid.Column="3"  Grid.Row="1" >
            <Label>Участники</Label>
        </StackPanel>
        <Menu
			Grid.ColumnSpan="4">
            <MenuItem
				Header="Файл"
				Grid.Row="0"
				ClipToBounds="False">
                <MenuItem
					Header="Сохранить" />
                <MenuItem
					Header="Сохранить как..." />
                <MenuItem
					Header="Открыть" />
                <Separator/>
                <MenuItem
					Header="Выход"
					Click="ExitButtonClick" />
            </MenuItem>
            <MenuItem
				Header="Настройки"
				Grid.Row="0">
                <MenuItem
					Header="Выбор стран"
					Click="ColorsButtonClick" />
                <MenuItem
					Header="Выбор сложности"
					Click="DifficultyButtonCLick" />
            </MenuItem>
            <MenuItem
				Header="Помощь"
				Grid.Row="0">
                <MenuItem
					Header="Правила" />
                <MenuItem
					Header="Об авторе" />
            </MenuItem>
        </Menu>
        <StackPanel
			Grid.Row="1"
			Grid.Column="2">
            <Label Content="Участники"/>
            <Label Content="Страна 1"/>
            <Label Content="Страна 2"/>
            <Label Content="Страна 3"/>
            <Label Content="Страна 4"/>
            <Label Content="Страна 5"/>
            <Label Content="Страна 6"/>
            <Label Content="Страна 7"/>
            <Label Content="Страна 8"/>
        </StackPanel>


        <Button
			Click="StartButtonClick"
			ClickMode="Press"
			Content="Start"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Grid.Row="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="30,30,30,100" />
        <Button
			Click="PauseButonCLick"
			ClickMode="Press"
			Grid.Row="2"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Content="Pause"
			Margin="30,100,30,30" />
        <Button
			Click="ExitButtonClick"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Grid.Row="3"
			Content="Exit" />
        <Slider
			Maximum="100"
			Width="200"
			Height="20"
			SmallChange="1"
			AutoToolTipPlacement="BottomRight"
			x:Name="SpeedSlider"
			ValueChanged="SpeedSlider_ValueChanged"
			Grid.Column="1"
			Grid.Row="3"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="15,20,0,0" />
        <Label
			Content="Скорость"
			Grid.Column="1"
			Grid.Row="3"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="85,3,176,19" />
        <TextBox
			Width="50"
			Height="20"
			PreviewTextInput="SpeedText_PreviewTextInput"
			x:Name="SpeedText"
			Grid.Column="1"
			Grid.Row="3"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="230,0,0,12.5"
			TextChanged="SpeedText_TextChanged" />
    </Grid>
</Window>